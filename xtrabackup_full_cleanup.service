[Unit]
Description=Service for xtrabackup full backup and cleanup
Wants=xtrabackup_incremental.timer

[Service]
Type=oneshot

# Full backup
ExecStart=/backup/xtrabackup_scripts/xtrabackup_full_increment_restore.sh full

# Cleanup
ExecStart=/backup/xtrabackup_scripts/xtrabackup_full_increment_restore.sh cleanup

[Install]
WantedBy=multi-user.target
